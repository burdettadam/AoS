{
  "name": "ashes-of-salem",
  "version": "0.1.0",
  "description": "A digital social deduction game heavily inspired by Blood on the Clock Tower",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build:shared && concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd packages/server && npm run dev",
    "dev:client": "cd packages/client && npm run dev",
    "dev:docker": "./docker/docker-setup.sh",
    "docker:up": "cd docker && docker compose up -d",
    "docker:down": "cd docker && docker compose down",
    "docker:logs": "cd docker && docker compose logs -f",
    "docker:build": "cd docker && docker compose up -d --build",
    "build": "npm run build:shared && npm run build:server && npm run build:client",
    "build:shared": "cd packages/shared && npm run build",
    "build:server": "cd packages/server && npm run build",
    "build:client": "cd packages/client && npm run build",
    "test": "npm run test:server && npm run test:client",
    "test:server": "cd packages/server && npm test",
    "test:client": "cd packages/client && npm test",
    "lint": "eslint packages --ext .ts,.tsx,.js,.jsx",
    "lint:report": "eslint packages --ext .ts,.tsx,.js,.jsx --format=json --output-file=eslint-report.json",
    "test:coverage": "npm run test:server:coverage && npm run test:client:coverage",
    "test:server:coverage": "cd packages/server && npm run test:coverage",
    "test:client:coverage": "cd packages/client && npm run test:coverage",
    "quality:check": "npm run lint && npm run test:coverage && npm run analyze:complexity",
    "setup": "npm install && npm run setup:packages && npm run build:shared",
    "setup:packages": "cd packages/shared && npm install && cd ../server && npm install && cd ../client && npm install",
    "scripts:build": "tsc -p tsconfig.scripts.json",
    "data:standardize": "ts-node scripts/standardize-characters.ts",
    "data:standardize:scripts": "ts-node scripts/standardize-scripts.ts",
    "data:ensure:actions": "ts-node scripts/ensure-actions.ts",
    "data:validate": "ts-node scripts/validate-data.ts",
    "data:lint": "ts-node scripts/lint-data.ts",
    "analyze:complexity": "./scripts/analyze-code-simple.sh",
    "quality:full": "./scripts/analyze-code-simple.sh",
    "quality:report": "./scripts/generate-quality-report.sh",
    "ai:test": "cd packages/server && npx ts-node src/ai/test-ai-integration.ts",
    "ai:start": "./docker/start-with-ai.sh",
    "ai:docker": "cd docker && docker compose -f docker-compose.yml up -d ollama",
    "ai:logs": "cd docker && docker compose logs -f ollama",
    "ai:models": "docker exec -it botct-ollama ollama list",
    "ai:pull:deepseek": "docker exec -it botct-ollama ollama pull deepseek-r1:7b",
    "ai:pull:llama": "docker exec -it botct-ollama ollama pull llama3.2:3b",
    "ai:pull:phi": "docker exec -it botct-ollama ollama pull phi4-mini",
    "ai:shell": "docker exec -it botct-ollama /bin/bash"
  },
  "bin": {
    "ashes-of-salem-resolve": "./scripts/utilities/resolve-lineup.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@playwright/test": "^1.55.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/cheerio": "^1.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "eslint-formatter-json": "^8.40.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "plato": "^1.7.0",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vite-bundle-analyzer": "^0.7.0"
  },
  "keywords": [
    "ashes-of-salem",
    "social-deduction",
    "blood-on-the-clocktower-inspired",
    "game",
    "websocket",
    "realtime",
    "ai",
    "llm"
  ],
  "author": "Adam Burdett",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.17.1",
    "cheerio": "^1.0.0-rc.12",
    "express": "^5.1.0",
    "jwks-rsa": "^3.2.0"
  }
}
