{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Character",
  "type": "object",
  "required": ["id", "name", "team", "ability", "setup", "editions", "tags"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
  "team": { "type": "string", "enum": ["townsfolk", "outsider", "minion", "demon", "fabled", "traveller"] },
    "ability": { "type": "string" },
    "firstNight": { "type": ["string", "null"] },
    "otherNights": { "type": ["string", "null"] },
    "reminders": { "type": "array", "items": { "type": "string" } },
    "setup": { "type": "boolean" },
    "special": { "type": ["string", "null"] },
    "editions": { "type": "array", "items": { "type": "string" } },
    "tags": { "type": "array", "items": { "type": "string" } },
    "wikiUrl": { "type": ["string", "null"] },
    "imageUrl": { "type": ["string", "null"] },
    "howToRun": { "type": "string" },
    "firstNightDescription": { "type": "string" },
    "tipsAndTricks": { "type": "string" },
    "bluffing": { "type": "string" },
    "legacy": { "type": ["object", "null"] },
    "interactions": {
      "type": "object",
      "properties": {
        "conflicts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "with": { "type": "string" },
              "effect": { "type": "string" },
              "description": { "type": "string" }
            }
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "requires": { "type": "string" },
              "effect": { "type": "string" }
            }
          }
        },
        "immunity": {
          "type": "object",
          "properties": {
            "demonAttack": { "type": "boolean" },
            "poison": { "type": "boolean" },
            "execution": { "type": "boolean" }
          }
        }
      }
    },
    "goal": {
      "description": "High-level purpose of the character ability used for script statistics.",
      "type": "object",
      "properties": {
        "action": { "type": "string" },
        "description": { "type": "string" },
        "targets": { "type": "array", "items": { "type": "string" } },
        "effect": { "type": "string" },
        "frequency": { "type": "string" },
        "actionType": { "type": "string" },
        "selection": { "$ref": "#/definitions/targetSelectionNew" },
        "effects": { "type": "array", "items": { "$ref": "#/definitions/effectSpecNew" } },
        "trigger": { "$ref": "#/definitions/triggerSpec" },
        "condition": { "$ref": "#/definitions/conditionSpec" }
      },
      "additionalProperties": true
    },
    "actions": {
      "description": "Concrete, programmatic actions for each phase. Mirrors meta-action structure in scripts.",
      "type": "object",
      "properties": {
        "firstNight": { "$ref": "#/definitions/actionList" },
        "otherNights": { "$ref": "#/definitions/actionList" },
        "day": { "$ref": "#/definitions/actionList" },
        "nominations": { "$ref": "#/definitions/actionList" },
        "voting": { "$ref": "#/definitions/actionList" },
        "execution": { "$ref": "#/definitions/actionList" }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
  "information": {
    "type": "object",
    "properties": {
      "showPlayersByTeam": {
        "type": "array",
        "items": { "enum": ["townsfolk", "outsiders", "minions", "demons"] }
      },
      "showPlayers": { "type": "array", "items": { "type": "string" } },
      "showPlayer": { "type": "string" },
      "showRoles": { "type": "boolean" },
      "giveBluffs": { "type": "number" },
      "customMessage": { "type": "string" }
    },
    "additionalProperties": true
  },
  "targetSelection": {
    "type": "object",
    "properties": {
      "minTargets": { "type": "integer", "minimum": 0 },
      "maxTargets": { "type": "integer", "minimum": 0 },
      "allowSelf": { "type": "boolean" },
      "allowDead": { "type": "boolean" },
      "requireAlive": { "type": "boolean" },
      "restrictByTeam": {
        "type": "array",
        "items": { "enum": ["townsfolk", "outsider", "minion", "demon", "traveller", "fabled"] }
      },
      "restrictByTags": { "type": "array", "items": { "type": "string" } },
      "adjacentOnly": { "type": "boolean" }
    },
    "additionalProperties": true
  },
  "targetSelectionNew": {
    "type": "object",
    "properties": {
      "type": { "type": "string" },
      "criteria": {
        "type": "object",
        "properties": {
          "allowSelf": { "type": "boolean" },
          "allowDead": { "type": "boolean" },
          "requireAlive": { "type": "boolean" },
          "restrictByTeam": {
            "type": "array",
            "items": { "enum": ["townsfolk", "outsider", "minion", "demon", "traveller", "fabled"] }
          },
          "restrictByTags": { "type": "array", "items": { "type": "string" } },
          "adjacentOnly": { "type": "boolean" }
        },
        "additionalProperties": true
      }
    },
    "additionalProperties": true,
    "required": ["type"]
  },
  "effectSpecNew": {
    "type": "object",
    "properties": {
      "type": { "type": "string" },
      "target": { "type": "string" },
      "duration": { "type": "string", "enum": ["IMMEDIATE", "TONIGHT", "UNTIL_DUSK", "ONE_DAY", "ONE_NIGHT", "PERMANENT", "DAY", "GAME", "NIGHT", "WHEN_TARGETED", "EXECUTION"] },
      "condition": { "$ref": "#/definitions/conditionSpec" },
      "modification": { "type": "object" },
      "information": { "$ref": "#/definitions/information" },
      "statusEffect": { "type": "string" },
      "newRole": { "type": "string" },
      "assignment": { "type": "object" },
      "disruption": { "type": ["string", "object"] },
      "immunityType": { "type": "string" },
      "redirect": { "type": ["string", "object"] },
      "misregistration": { "type": ["string", "object"] },
      "visibility": { "type": ["string", "object"] }
    },
    "required": ["type"],
    "additionalProperties": true
  },
  "conditionSpec": {
    "type": ["string", "object"],
    "properties": {
      "type": { "type": "string" }
    },
    "additionalProperties": true
  },
  "triggerSpec": {
    "type": "object",
    "properties": {
      "type": { "type": "string" }
    },
    "additionalProperties": true
  },
  "effectSpec": {
    "type": "object",
    "properties": {
      "status": { "type": "string" },
      "target": { "type": "string", "enum": ["self", "selected", "oneOfSelected", "allSelected"] },
      "duration": { "type": "string", "enum": ["instant", "tonight", "untilDusk", "oneDay", "oneNight", "permanent"] },
      "value": { "type": ["string", "number", "boolean", "null"] },
      "note": { "type": "string" }
    },
    "required": ["status", "target"],
    "additionalProperties": true
  },
  "action": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "type": { "type": "string", "enum": ["character", "meta"] },
      "action": { "type": "string" },
      "description": { "type": "string" },
      "targets": { "type": "array", "items": { "type": "string" } },
      "selection": { "$ref": "#/definitions/targetSelectionNew" },
      "effects": { "type": "array", "items": { "$ref": "#/definitions/effectSpecNew" } },
      "information": { "$ref": "#/definitions/information" },
      "order": { "type": "number" },
      "actionType": { "type": "string" },
      "trigger": { "$ref": "#/definitions/triggerSpec" },
      "condition": { "$ref": "#/definitions/conditionSpec" }
    },
    "additionalProperties": true
  },
  "actionList": {
    "type": "array",
    "items": { "$ref": "#/definitions/action" }
  }
}
}
