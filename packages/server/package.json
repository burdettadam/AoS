{
  "name": "@ashes-of-salem/server",
  "version": "0.1.0",
  "description": "Ashes of Salem Server - Game Engine and API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "predev": "cd ../shared && npm run build",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "pretest": "cd ../shared && npm run build",
    "test": "jest",
    "import:wiki": "ts-node src/game/importer.ts",
    "smoke": "ts-node scripts/smoke.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ashes-of-salem/shared": "file:../shared",
    "@fastify/cors": "^8.3.0",
    "@fastify/websocket": "^8.3.0",
    "@types/jsonwebtoken": "^9.0.10",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "fastify": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "jwks-rsa": "^3.2.0",
    "nanoid": "^3.3.7",
    "postgres": "^3.3.5",
    "redis": "^4.6.7",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
