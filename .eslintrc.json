{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "complexity": "off",
    "max-depth": "off",
    "max-lines": "off",
    "max-lines-per-function": "off",
    "max-params": "off",
    "max-statements": "off",
    "max-nested-callbacks": "off",

    "no-unused-vars": "warn",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "no-magic-numbers": "off",
    "no-empty": "error",
    "no-useless-escape": "error"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint"],
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
        "@typescript-eslint/no-unused-vars": [
          "warn",
          {
            "argsIgnorePattern": "^_",
            "varsIgnorePattern": "^_|^(s[0-9]+|player[0-9]+Id|gameId|seatId|latency|fullPath|characterCount|st|options|wsConnected|characterTests|initialMovesCount|fixtureExpect|SeatId|InformationSpec|randomUUID|Alignment|inferTimingFromType|RoleType|Character|NightOrderEntry|GrimoireState|GameId|PTTJournalEntry|AvailableMove|Journal|StatusEffect|createEffect|CharacterActionType|MetaActionType|SelectionModifier|ActionPhase)$",
            "caughtErrorsIgnorePattern": "^_",
            "ignoreRestSiblings": true
          }
        ],
        "@typescript-eslint/no-explicit-any": "off",
        "@typescript-eslint/explicit-function-return-type": "off",
        "@typescript-eslint/no-namespace": "off",
        "@typescript-eslint/no-this-alias": "error",
        "@typescript-eslint/no-var-requires": "error"
      }
    }
  ]
}
